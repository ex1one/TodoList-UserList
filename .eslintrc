{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": ["warn"],
        "no-console": ["warn"],
        "no-debugger": ["warn"],
        "no-unused-vars": ["warn"],
        "react/function-component-definition": [2,
            {
                "namedComponents": "arrow-function"
            }],
        "react/jsx-props-no-spreading": ["off"],
        "no-nested-ternary": ["off"],
        "react/prop-types": ["off"]
//        "react/jsx-filename-extension": "off"
    }
}
